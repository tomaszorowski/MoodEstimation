<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_manage_displayed_scale"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tomek.moodestimation.ManageDisplayedScales">

    <TextView
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:text="Scales management"
        android:id="@+id/displayedScalesManagementTitle"
        android:layout_weight="0.11"
        style="@android:style/TextAppearance.Large"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:textSize="30sp" />

    <CheckBox
        android:text="Spane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spaneCheckBox"
        android:textSize="25sp"
        android:layout_below="@+id/displayedScalesManagementTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <CheckBox
        android:text="Radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioSpaneCheckBox"
        android:layout_below="@+id/spaneCheckBox"
        android:layout_toRightOf="@+id/sliderSpaneCheckBox"
        android:layout_toEndOf="@+id/sliderSpaneCheckBox"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />

    <CheckBox
        android:text="Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageSpaneCheckBox"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_alignBaseline="@+id/radioSpaneCheckBox"
        android:layout_alignBottom="@+id/radioSpaneCheckBox"
        android:layout_toRightOf="@+id/radioSpaneCheckBox"
        android:layout_toEndOf="@+id/radioSpaneCheckBox" />

    <CheckBox
        android:text="Slider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sliderSpaneCheckBox"
        android:layout_below="@+id/spaneCheckBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Panas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/panasCheckBox"
        android:textSize="25sp"
        android:layout_below="@+id/radioSpaneCheckBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <CheckBox
        android:text="Slider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sliderPanasCheckBox"
        android:layout_below="@+id/panasCheckBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioPanasCheckBox"
        android:layout_below="@+id/panasCheckBox"
        android:layout_alignLeft="@+id/radioSpaneCheckBox"
        android:layout_alignStart="@+id/radioSpaneCheckBox" />

    <CheckBox
        android:text="Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imagePanasCheckBox"
        android:layout_alignBaseline="@+id/radioPanasCheckBox"
        android:layout_alignBottom="@+id/radioPanasCheckBox"
        android:layout_alignLeft="@+id/imageSpaneCheckBox"
        android:layout_alignStart="@+id/imageSpaneCheckBox" />

    <CheckBox
        android:text="Pam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pamCheckBox"
        android:textSize="25sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Back"
        android:layout_height="wrap_content"
        android:id="@+id/backToOptionsBtn"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button"
        android:textAllCaps="false"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/sliderPanasCheckBox"
        android:layout_toEndOf="@+id/sliderPanasCheckBox"
        android:layout_width="220dp"
        android:onClick="goToOptions" />

    <Button
        android:text="Save"
        android:layout_height="wrap_content"
        android:id="@+id/saveManagement"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button"
        android:textAllCaps="false"
        android:layout_width="220dp"
        android:onClick="saveManagement"
        android:layout_above="@+id/backToOptionsBtn"
        android:layout_alignLeft="@+id/backToOptionsBtn"
        android:layout_alignStart="@+id/backToOptionsBtn" />
</RelativeLayout>
