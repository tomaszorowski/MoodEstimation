<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tomek.moodestimation.Pam">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:weightSum="1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">


            <TextView
                android:layout_width="324dp"
                android:layout_height="44dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Pam"
                android:id="@+id/titlePam"
                style="@android:style/TextAppearance.Large"
                android:gravity="center"
                android:textAlignment="gravity"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Find your mood"
                android:gravity="center"
                android:textAlignment="gravity"
                android:textStyle="italic" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.80"
                android:id="@+id/tableForButtons">
            </TableLayout>
                android:id="@+id/textPamDescription" />
            <Button
                android:layout_width="270dp"
                android:layout_height="64dp"
                android:layout_marginTop="50dp"
                android:text="Find your mood"
                android:id="@+id/findYourMood"
                android:onClick="findYourMood"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="false" />
            <Button
                android:layout_width="270dp"
                android:layout_height="64dp"
                android:layout_marginTop="0dp"
                android:text="Save"
                android:id="@+id/savePam"
                android:onClick="savePam"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="false" />
        </LinearLayout>

    </ScrollView>






</RelativeLayout>
