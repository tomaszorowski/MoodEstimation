<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tomek.moodestimation.SignUp">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:weightSum="1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/email_et"
            android:hint="E-mail"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/username_et"
            android:hint="Username"
            android:layout_below="@+id/email_et"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/password_et"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/username_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/repeat_password_et"
            android:hint="Repeat password"
            android:inputType="textPassword"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/password_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/name_et"
            android:hint="First name"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/repeat_password_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/surname_et"
            android:hint="Surname"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/sign_up_btn"
            android:text="Sign Up"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/surname_et"
            android:onClick="signUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false" />
        <Button
            android:id="@+id/back_to_sign_in_btn"
            android:text="Back"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/sign_up_btn"
            android:onClick="backToSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
