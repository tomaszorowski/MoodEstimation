<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tomek.moodestimation.AddMood">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="AddMood"
            android:id="@+id/titleAddMood"
            android:layout_weight="0.11"
            style="@android:style/TextAppearance.Large"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textStyle="italic" />

        <Button
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Spane"
            android:id="@+id/spane"
            android:onClick="goToSpaneActivity"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.04"
            android:textAllCaps="false" />

        <Button
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Panas"
            android:id="@+id/panas"
            android:onClick="goToPanas"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.04"
            android:textAllCaps="false" />

        <Button
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Pam"
            android:id="@+id/pam"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.04"
            android:textAllCaps="false" />
            <!--wylaczone zmienic sposob dzialania i obrazki-->
            <!--android:onClick="goToPam"-->


        <Button
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Special"
            android:id="@+id/special"
            android:onClick="goToSpecial"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.04"
            android:textAllCaps="false" />

        <Button
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/backAddMood"
            android:onClick="goToMenuActivity"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_weight="0.04"
            android:textAllCaps="false" />
    </LinearLayout>
</RelativeLayout>
