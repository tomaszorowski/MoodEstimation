<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tomek.moodestimation.activities.MenuActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:id="@+id/titleMenu"
            android:layout_weight="0.11"
            style="@android:style/TextAppearance.Large"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textStyle="italic"
            android:fontFamily="sans-serif" />

        <Button
            android:text="Tasks"
            android:id="@+id/tasks_btn"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="#F1F2F0"
            android:textSize="25sp"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:textAllCaps="false" />
        <Button
            android:text="Unsigned tests"
            android:id="@+id/unsignedTests_btn"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="#F1F2F0"
            android:textSize="25sp"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:textAllCaps="false" />

        <Button
            android:text="Statistics"
            android:id="@+id/statistics_btn"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="#F1F2F0"
            android:textSize="25sp"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:textAllCaps="false" />

        <Button
            android:text="Log out"
            android:id="@+id/logOut_btn"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="#F1F2F0"
            android:textSize="25sp"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:textAllCaps="false" />
        <Button
            android:text="Exit"
            android:id="@+id/exit_btn"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="#F1F2F0"
            android:textSize="25sp"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:textAllCaps="false" />


    </LinearLayout>
</RelativeLayout>
